{
    "version": "1.7.4",
    "name": "@mkellsy/homebridge-haiku",
    "displayName": "Homebridge Haiku",
    "description": "This is a plugin that exposes Big Ass Fans Haiku and i6 fans to Homebridge.",
    "author": "Michael Kellsy",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/mkellsy/homebridge-haiku.git"
    },
    "homepage": "https://github.com/mkellsy/homebridge-haiku",
    "main": "lib/index.js",
    "engines": {
        "homebridge": "^1.6.0 || ^2.0.0-beta.0",
        "node": "^18.20.4 || ^20.15.1"
    },
    "keywords": [
        "homebridge-plugin",
        "big-ass-fans",
        "ceiling-fan",
        "fan",
        "i6",
        "e6",
        "haiku"
    ],
    "files": [
        "/lib"
    ],
    "scripts": {
        "build": "npm run format && npm run lint && npm run test && node ./build",
        "lint": "eslint ./src/*.ts",
        "format": "prettier --write .",
        "test": "nyc mocha test/*.test.ts test/**/*.test.ts",
        "watch": "node ./build && npm link && nodemon",
        "prepublishOnly": "npm run build"
    },
    "peerDependencies": {
        "homebridge": "^1.8.5"
    },
    "devDependencies": {
        "@eslint/js": "^9.2.0",
        "@mkellsy/baf-client": "^1.7.3",
        "@mkellsy/hap-device": "^1.7.7",
        "@types/chai": "^4.3.9",
        "@types/chai-subset": "^1.3.4",
        "@types/debug": "^4.1.12",
        "@types/eslint__js": "^8.42.3",
        "@types/mocha": "^10.0.3",
        "@types/node": "^20.11.0",
        "@types/sinon": "^10.0.20",
        "@types/sinon-chai": "^3.2.11",
        "@typescript-eslint/eslint-plugin": "^7.11.0",
        "chai": "^4.3.10",
        "chai-subset": "^1.6.0",
        "esbuild": "^0.20.2",
        "eslint": "^8.57.0",
        "eslint-plugin-jsdoc": "^48.2.3",
        "mocha": "^10.2.0",
        "nodemon": "^3.1.0",
        "nyc": "^15.1.0",
        "prettier": "^3.2.5",
        "proxyrequire": "^1.0.21",
        "sinon": "^17.0.0",
        "sinon-chai": "^3.7.0",
        "source-map-support": "^0.5.21",
        "ts-node": "^10.9.1",
        "typescript": "^5.3.3"
    }
}
